{% extends "j0k3rFeedBundle::layout.html.twig" %}

{% block h2_title %}
    <img class="favicon" src="https://plus.google.com/_/favicon?domain={{ feed.link }}" />
    {{ feed.name }}'s logs
    <small>- {{ feedlogs|length }} logs</small>
{% endblock %}

{% block content %}
<div class="row">
    <div class="large-12 columns">
        <a class="secondary button radius small" href="{{ path('j0k3r_feed_edit', { 'slug': feed.slug }) }}">&lArr; Back to the feed</a>

        {% if feedlogs|length > 0 %}
            <table class="table-feedlogs">
                <thead>
                    <tr>
                        <th>Feed</th>
                        <th>Items</th>
                        <th>Created at</th>
                    </tr>
                </thead>
                <tbody>
                {% for feedlog in feedlogs %}
                    <tr>
                        <td>
                            <img class="favicon" src="https://plus.google.com/_/favicon?domain={{ feedlog.feed.link }}" />
                            <a href="{{ path('j0k3r_feed_edit', { 'slug': feedlog.feed.slug }) }}">{{ feedlog.feed.name }}</a>
                        </td>
                        <td>{{ feedlog.itemsnumber }}</td>
                        <td>{{ feedlog.createdat|date('d/m/y - H:i:s') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}

        <a class="secondary button radius small" href="{{ path('j0k3r_feed_edit', { 'slug': feed.slug }) }}">&lArr; Back to the feed</a>
    </div>
</div>

{% endblock %}
