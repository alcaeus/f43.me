{% if true == modal %}
    <a class="close-reveal-modal">&#215;</a>
    <p><span class="label">Tips:</span> if it looks bad, you should change the parser type and test again.</p>
{% endif %}

{% if url or title %}
    <ul class="no-bullet">
        {% if url %}
            <li><strong>Link</strong>: <a href="{{ url }}" target="_blank">{{ url }}</a></li>
        {% endif %}
        {% if title %}
            <li><strong>Title</strong>: {{ title|raw }}</li>
        {% endif %}
    </ul>
{% endif %}

<hr/>
{{ content|raw }}
