{% extends "j0k3rFeedBundle::layout.html.twig" %}

{% block h2_title %}f43.me <small>readable &amp; cleaner feeds</small>{% endblock %}
{% block h3_title %}Feed list <small>readable &amp; cleaner feeds</small>{% endblock %}

{% block content %}
<div class="row">
    <div class="large-8 columns">
        <h3 class="subheader">Last updated feeds</h3>
    </div>
    <div class="large-2 large-offset-2 columns">
        <p><a class="success button radius small" href="{{ path('j0k3r_feed_new') }}">Add a new feed</a></p>
    </div>
</div>
<div class="row">
    <div class="large-12 columns">
        {% if feeds|length > 0 %}
            <table class="table-feeds">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Link</th>
                        <th>Items</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for feed in feeds %}
                    <tr>
                        <td><img class="favicon" src="https://plus.google.com/_/favicon?domain={{ feed.link }}" /> <a href="{{ path('j0k3r_feed_edit', { 'slug': feed.slug }) }}">{{ feed.name }}</a></td>
                        <td><div>{{ feed.link }}</div></td>
                        <td>{{ feed.feeditems.count }}</td>
                        <td>{% if feed.createdat %}{{ feed.createdat|date('d/m/y - H:i:s') }}{% endif %}</td>
                        <td>{% if feed.updatedat %}{{ feed.updatedat|date('d/m/y - H:i:s') }}{% endif %}</td>
                        <td>
                            <a href="{{ path('j0k3r_feed_edit', { 'slug': feed.slug }) }}">edit</a> -
                            <a href="{{ path('j0k3r_feeditem_homepage', { 'slug': feed.slug }) }}">items</a> -
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No feeds</p>
        {% endif %}
    </div>
</div>

{% endblock %}
