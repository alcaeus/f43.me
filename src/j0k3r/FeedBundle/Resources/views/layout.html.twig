<!DOCTYPE html>
<!--[if IE 8]>         <html class="no-js lt-ie9" lang="en" > <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en" > <!--<![endif]-->

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>f43.me</title>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/j0k3rfeed/css/foundation.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/j0k3rfeed/css/app.css') }}" />

    <script src="{{ asset('bundles/j0k3rfeed/js/vendor/zepto.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/j0k3rfeed/js/vendor/custom.modernizr.js') }}" type="text/javascript"></script>
</head>
<body>
    <nav class="top-bar">
        <ul class="title-area">
            <li class="name">
                <h1><a href="{{ path('j0k3r_feed_dashboard') }}">f43.me</a></h1>
            </li>
            <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
        </ul>

        <section class="top-bar-section">
            <ul class="left">
                <li class="divider"></li>
                <!-- <li class="active"><a href="#">Main Item 1</a></li> -->
                <li><a href="{{ path('j0k3r_feed_homepage') }}">Feeds</a></li>
                <li class="divider"></li>
                <li><a href="{{ path('j0k3r_feedlog_homepage') }}">Feed logs</a></li>
                <li class="divider"></li>
            </ul>

            <ul class="right">
                <li class="has-form">
                    <a class="success button radius small" href="{{ path('j0k3r_feed_new') }}">Add a new feed</a>
                </li>
                <li class="divider"></li>
                <li class="has-form">
                    <a class="alert button" href="#">Logout</a>
                </li>
            </ul>
        </section>
    </nav>

    <div class="row">
        <div class="large-12 columns">
            <h2>{% block h2_title %}{% endblock %}</h2>
            <hr />
            {% for flashMessage in app.session.flashbag.get('info') %}
                <div data-alert class="alert-box radius">{{ flashMessage|raw }}</div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div data-alert class="alert-box success radius">{{ flashMessage|raw }}</div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('error') %}
                <div data-alert class="alert-box alert radius">{{ flashMessage|raw }}</div>
            {% endfor %}
        </div>
    </div>

    {% block content %}{% endblock %}

    <script src="{{ asset('bundles/j0k3rfeed/js/foundation.min.js') }}" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js" type="text/javascript"></script>
    <script src="{{ asset('bundles/j0k3rfeed/js/morris.js') }}" type="text/javascript"></script>

    <script>
        $(document).foundation();
    </script>
</body>
</html>
